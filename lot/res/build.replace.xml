<?xml version="1.0" encoding="UTF-8"?>
<project>
<target name="replace">
	<!-- replace strings within utf-8 files (non-support for escaped-unicode) -->
	<copy taskname="replace utf-8" todir="${lot.temp.dir}/replace/${replace.src.dir}" encoding="${lot.encoding.filters}" preservelastmodified="true" overwrite="true">
		<fileset dir="${replace.src.dir}" includes="${replace.utf8.includes}" excludes="${replace.utf8.excludes}"/>
		<!-- note: filterset don't support null begin/end token and cannot reuse apply-filters -->
		<filterchain>
			<!-- js filter is toooooooooo slow! <scriptfilter language="javascript">
				<classpath><fileset dir="antlib" includes="*.jar"/></classpath>
					self.setToken(self.getToken().replace("Firefox", "Shiretoko"));
			</scriptfilter> -->
			<!-- <replacestring from="Firefox" to="Shiretoko"/> -->
<!-- FILTERCHAIN_LIST -->
		</filterchain>
	</copy>
	<!-- just copy other files
	<copy taskname="copy other files" preservelastmodified="true" overwrite="true"
		todir="${lot.temp.dir}/replace/${replace.src.dir}">
		<fileset dir="${replace.src.dir}" includes="${replace.other.includes}" excludes="${replace.other.excludes}"/>
	</copy> -->
	<move todir="${replace.src.dir}" preservelastmodified="true" overwrite="true">
		<fileset dir="${lot.temp.dir}/replace/${replace.src.dir}"/>
	</move>
</target>
</project>
